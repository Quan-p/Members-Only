extends layout 

block content 
    div.form-container
        form.login-form(action='/login' method='POST')
            h1.form-title= title 
            div.input-container 
                label(for='username') Username
                input#username.login-input(type='text' name='username' required='true')
            div.input-container 
                label(for='password') Password
                input#password.login-input(type='password' name='password' required='true')
            button.submit-btn(type='submit') Login
            
            p Don't have an account? #[a(href='/sign-up').signup-link Sign Up]

        if(message)
            p #{message}