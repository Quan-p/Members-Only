extends layout 

block content 
    form.signup-form(action='/sign-up' method='POST')
        h1= title
        div 
            label(for='username') Username:
            input#username.signup-input(type='text' name='username' required='true' maxLength='25')
            if (error) 
                p.error-message #{error}
        div 
            label(for='password') Password:
            input#password.signup-input(type='password' name='password' required='true')
        div 
            label(for='confirmPassword') Confirm Password:
            input#confirmPassword.signup-input(type='password' name='confirmPassword' required='true')
        if (passwordCompareError) 
                p.error-message #{passwordCompareError}
        button(type='submit') Sign Up