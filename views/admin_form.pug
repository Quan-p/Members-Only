extends layout 

block content 
    if(!user.admin)
        div.form-container
            form.member-form(action='/admin' method='POST')
                h1.form-title= title
                div.instruction-msg Enter the correct password to become an admin!
                div.input-container 
                    label(for='adminCode') Admin Password
                    input.auth-input(type='password' name='adminCode' required='true')
                    if (passwordError) 
                        p.error-message #{passwordError}
                button.submit-btn(type='submit') Submit Password
    
    else 
        h3.confirm-msg Congratulations you are an admin!