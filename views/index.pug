extends layout


block content
  if locals.currentUser 
    div Welcome #{user.username}
  else 
    p Become a member to see users and dates.

  if messages
    div.message-container 
      each message in messages
        div= message.title
        div= message.text
        if user && user.member
          h4= message.user.username
          div= message.date_formatted
        else 
          h4 Anonymous 
          div Date: N/A

