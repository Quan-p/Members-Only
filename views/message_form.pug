extends layout 

block content 
    div.form-container
        form.message-form(action='/create-message' method='POST')
            h1.form-title= title
            div.input-container 
                label(for='messageTitle') Title 
                input.title-input(type='text' name='messageTitle' required='true' maxLength='100')
            div.input-container
                label(for='textInput') Message
                textarea.text-input(type='text' name='textInput' required='true')
                    
            button(type='submit').submit-btn Post Message 

        if(errors) 
            p #{errors}
